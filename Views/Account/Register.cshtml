@{ 
    ViewBag.Title = "Register";
    Layout = null;
}
@model RegisterViewModel


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">
    <link href="~/TemplateLogin/css/style.css" rel="stylesheet" />
</head>

<body>

    <div class="wrapper">
        <div class="inner">
            <form form enctype="multipart/form-data" method="post" asp-controller="Account" asp-action="Register">
                <h3>Đăng Kí</h3>
                <div class="form-group">
                    <div class="form-wrapper">
                        <label asp-for="FirstName"></label>
                        <input class="form-control" type="text" placeholder="LastName" asp-for="LastName">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-wrapper">
                        <label asp-for="LastName"></label>
                        <input class="form-control" type="text" placeholder="LastName" asp-for="LastName">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-wrapper">
                    <label asp-for="Email"></label>
                    <input class="form-control" type="text" placeholder="Email" asp-for="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-wrapper">

                    <label asp-for="Password"></label>
                    <input class="form-control" placeholder="Password" asp-for="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-wrapper">
                    <label asp-for="ConfirmPassword"></label>
                    <input class="form-control" placeholder="ConfirmPassword" asp-for="ConfirmPassword">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="checkbox">
                    <label>
                        <input type="checkbox"> I caccept the Terms of Use & Privacy Policy.
                        <span class="checkmark"></span>
                    </label>
                </div>
                <button type="submit">Submit</button>
            </form>
        </div>
    </div>
    <script src="/lib/jquery/jquery.min.js"></script>
    <script src="/lib/jquery-validation/jquery.validate.min.js"></script>
    <script src="/lib/jquery-validation/jquery.validate.unobtrusive.min.js"></script>
    <script src="/lib/bootstrap-v4/js/bootstrap.min.js"></script>
</body>
</html>