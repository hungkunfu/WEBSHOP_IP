@model List<Product>

@inject AppDbContexts context;

@{
    Layout = "~/Views/Shared/_LayoutAdminPage.cshtml";
}

<a asp-controller="Product" asp-action="Create" style="float:right">Add Product</a>

<table class="table table-striped table-bordered" style="width:100%" id="WatchProductById">
    <thead style="text-align:center" class="thead-dark">
        <tr>
            <th scope="col">Tên sản phẩm</th>
            <th scope="col">Giá</th>
            <th scope="col">Ngày tạo sản phẩm</th>
            <th scope="col">Hình ảnh</th>
            <th scope="col">Trạng thái</th>
            <th scope="col">Action</th>
        </tr>
    </thead>

    <tbody style="text-align:center">

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.PricePerUnit</td>
                <td>@item.CreateAt</td>
                <td>
                    <img src="~/img/ProductImages/@item.ImagePath" alt="Alternate Text" style="width:50px;height:50px"
                         asp-append-version="true" />
                </td>
                <td>@item.Status</td>
                <td>
                    <a href="javascript:void(0)" class="text-danger"
                       onclick="Category.RemoveProductFromCategory(@item.Id)">
                        <i class="fas fa-trash"></i>
                    </a>
                    <a asp-action="Edit" asp-controller="Product" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        }
    </tbody>

    <tfoot style="text-align:center" class="thead-dark">
        <tr>
            <th scope="col">Tên sản phẩm</th>
            <th scope="col">Giá</th>
            <th scope="col">Ngày tạo sản phẩm</th>
            <th scope="col">Hình ảnh</th>
            <th scope="col">Trạng thái</th>
            <th scope="col">Action</th>
        </tr>
    </tfoot>
</table>

@section Scripts{
    <script src="~/libs/js/Category.js" asp-append-version="true"></script>
}