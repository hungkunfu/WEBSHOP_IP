@model IEnumerable<Role>

@{
    ViewBag.Title = "Role, managerment";
    Layout = "~/Views/User/_LayoutUser.cshtml";
}
<link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" />
<link rel="preconnect" href="https://fonts.gstatic.com">
<h3> ROLE MANAGERMENT</h3>
<a asp-controller="Role" asp-action="Create" class="btn btn-warning" style="width:auto">Create Role</a>
<table class="table table-bordered table-hover mt-2">
    <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var role in Model)
            {
                <tr>
                    <td>
                        @role.RoleId
                    </td>
                    <td>
                        @role.RoleName
                    </td>
                    <td>
                        <a asp-controller="Role" asp-action="Edit" asp-route-id="@role.RoleId" class="btn btn-warning"><i class="fas fa-edit"></i></a>
                        <a asp-controller="Role" asp-action="Edit" asp-route-id="@role.RoleId" class="btn btn-danger"><i class="fas fa-trash"></i></a>

                    </td>
                </tr>
            }
        }
    </tbody>
</table>